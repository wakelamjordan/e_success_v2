{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
	<div class="d-flex justify-content-between py-2">
		<div class="">
			<a name="" id="" class="btn btn-primary" href="#" role="button">
				<i class="fas fa-user-plus me-1"></i>Nouveau</a>
		</div>
		<div class="">
			<a name="" id="" class="btn btn-success ms-2 " href="#" role="button">
				<i class="fas fa-eye me-1"></i>Afficher</a>
			<a name="" id="" class="btn btn-warning ms-2 " href="javascript:edit()" role="button">
				<i class="fas fa-paintbrush me-1"></i>Modifier</a>
			<a name="" id="" class="btn btn-danger ms-2 " href="#" role="button">
				<i class="fas fa-trash-can me-1"></i>Supprimer</a>
		</div>
	</div>
	<div class="table-responsive">
		<table class="table table-light table-striped table-hover my-auto">
			<thead>
				<tr class="table-dark">
					<th class="col-1 text-center" scope="col">
                    <input class="form-check-input mx-auto" type="checkbox" value="" id="select_all"/>
                    </th>
					<th class="col-1 text-center" scope="col">Id</th>
					<th class="col-3 text-center" scope="col">Nom</th>
					<th class="col-2 text-center" scope="col">Prénom</th>
					<th class="col-2 text-center" scope="col">Date de naissance</th>
					<th class="col-3 text-center" scope="col">Lieu de naissance</th>
				</tr>
			</thead>
			<tbody>
				{% for people in peoples %}
					<tr class="">
						<td scope="row">
							<div class="form-check">
								<input class="form-check-input mx-auto" type="checkbox" value="{{people.id}}" id="" name="checkbox_list"/>
								<label class="form-check-label" for="{{people.id}}"></label>
							</div>
						</td>
						<td class="text-center">
							<label class="form-check-label" for="{{people.id}}">{{people.id}}</label>
						</td>
						<td class="text-center">
							<label class="form-check-label" for="{{people.id}}">{{people.name}}</label>
						</td>
						<td class="text-center">
							<label class="form-check-label" for="{{people.id}}">{{people.surname}}</label>
						</td>
						<td class="text-center">
							<label class="form-check-label" for="{{people.id}}">{{people.getDateBirth()|date('d-m-Y')}}</label>
						</td>
						<td class="text-center">
							<label class="form-check-label" for="{{people.id}}">{{people.getPlaceBirth}}</label>
						</td>
					</tr>
				{% endfor %}
			</tbody>
			<tfoot>
				<tr class="table-dark">
					<td colspan="6" class="text-center">Nombre de personnes enregistré :{{nbre}}</td>
				</tr>
			</tfoot>
		</table>
	</div>
{% endblock %}
